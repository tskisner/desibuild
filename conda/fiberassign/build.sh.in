#!/bin/bash

if [ "$(uname)" == "Darwin" ]; then
    export CC=clang
    export CXX=clang++
    export CXXFLAGS="${CXXFLAGS} -O3 -std=c++11 -stdlib=libc++"
    export LDFLAGS="-L${PREFIX}/lib -stdlib=libc++"
else
    export CC=gcc
    export CXX=g++
    export CXXFLAGS="${CXXFLAGS} -O3 -std=c++11"
    export LDFLAGS="-L${PREFIX}/lib"
fi

export CPPFLAGS="-I${PREFIX}/include"

export INSTALL="${PREFIX}/bin"

make install

sitever=$(${PYTHON} --version 2>&1 | awk '{print $2}' | sed -e "s#\(.*\..*\)\..*#\1#")

site="${PREFIX}/lib/python${sitever}/site-packages/fiberassign"
mkdir -p "${site}"

cp -a ./py/fiberassign/* "${site}"

